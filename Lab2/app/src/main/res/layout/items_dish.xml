<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/dish_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:contentDescription="@string/thumbnail"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dish_label"
                android:layout_height="30dp"
                android:layout_width="120dp"
                android:layout_weight="1"
                android:background="@drawable/bg_black_mask"
                android:gravity="center|start"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/layout_margin_small"
                android:text="@string/thumbnail1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/promotion_label"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_black_mask"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/item_dish_promotion"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_promotion_s"
                android:visibility="gone"
                android:background="@drawable/bg_black_mask"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>